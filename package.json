{
  "name": "totalvoice-api",
  "version": "1.0.1",
  "description": "Nossa biblioteca do curso de JS com TDD na pr√°tica",
  "main": "lib/index.js",
  "scripts": {
    "clear": "rimraf lib",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir lib src",
    "build:watch": "npm run build -- --watch",
    "build:umd": "./node_modules/.bin/webpack --output-filename totalvoice-api.umd.js",
    "build:umd:min": "./node_modules/.bin/webpack --output-filename totalvoice-api.umd.min.js -p",
    "build:all": "npm run build && npm run build:umd && npm run build:umd:min",
    "lint": "./node_modules/.bin/eslint src/*.js tests/*.spec.js",
    "lint-fix": "npm run lint -- --fix",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require @babel/register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require @babel/register --watch",
    "test:coverage": "nyc npm test",
    "coveralls": "npm run test:coverage && nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "functions": 100,
    "lines": 100,
    "check-coverage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tota1099/js-tdd-course.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Renan Porto <renan.porto1099@gmail.com> (https://tota1099.github.io/site/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tota1099/js-tdd-course/issues"
  },
  "homepage": "https://github.com/tota1099/js-tdd-course#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "@babel/runtime": "^7.4.3",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "husky": "^3.0.4",
    "mocha": "^6.1.4",
    "nyc": "^14.0.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test:coverage"
    }
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.4.3",
    "babel-loader": "^8.0.5",
    "dotenv": "^7.0.0",
    "node-fetch": "^2.3.0"
  }
}
